<div class="row">
  <div class="col-xs-12">
    <h1>Editar</h1>
  </div>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for @user do |f| %>
      <%= render 'form', f: f %>
      <%= link_to 'Voltar', @user, class: 'btn btn-default' %>
      <%= f.submit 'Atualizar', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
